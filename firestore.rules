rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - allow authenticated users to read and manage
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Konsultasi collection
    match /konsultasi/{konsultasiId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Persalinan collection
    match /persalinan/{persalinanId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Chats collection
    match /chats/{chatId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Kehamilanku collection
    match /kehamilanku/{kehamilanId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Pemeriksaan Ibu Hamil collection
    match /pemeriksaan_ibuhamil/{examId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Jadwal Konsultasi collection
    match /jadwal_konsultasi/{scheduleId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Children collection
    match /children/{childId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Emergency reports collection
    match /darurat/{reportId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Helper function to check if user is admin
      function isAdmin() {
        return isAuthenticated() && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
      
      // Read: user can read their own notifications or admin can read all
      allow read: if isAuthenticated() && 
        (resource.data.receiverId == request.auth.uid || isAdmin());
      
      // Create: authenticated users can create
      allow create: if isAuthenticated();
      
      // Update: user can update their own notifications or admin can update all
      allow update: if isAuthenticated() && 
        (resource.data.receiverId == request.auth.uid || isAdmin());
      
      // Delete: user can delete their own notifications or admin can delete all
      allow delete: if isAuthenticated() && 
        (resource.data.receiverId == request.auth.uid || isAdmin());
    }
    
    // Default rule for other collections
    match /{document=**} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
  }
}