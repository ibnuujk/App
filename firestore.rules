rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - allow authenticated users to read and manage
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Konsultasi collection
    match /konsultasi/{konsultasiId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Persalinan collection
    match /persalinan/{persalinanId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Chats collection
    match /chats/{chatId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Kehamilanku collection
    match /kehamilanku/{kehamilanId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Pemeriksaan Ibu Hamil collection
    match /pemeriksaan_ibuhamil/{examId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Jadwal Konsultasi collection
    match /jadwal_konsultasi/{scheduleId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Children collection
    match /children/{childId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Emergency reports collection
    match /darurat/{reportId} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
        (resource.data.receiverId == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow write: if isAuthenticated();
    }
    
    // Default rule for other collections
    match /{document=**} {
      allow read, write, create, update, delete: if isAuthenticated();
    }
  }
}